{
  "name": "novagestion",
  "version": "1.0.0",
  "description": "",
  "main": "./out/main/index.js",
  "author": "novagestionsoftware",
  "homepage": "",
  "type": "module",
  "build": {
    "appId": "com.tuempresa.tuapp",
    "productName": "NovaGeneral",
    "directories": {
      "output": "C:/NovaGestion"
    },
    "win": {
      "target": [
        "dir"
      ],
      "icon": "resources/novaico.ico"
    },
    "nsis": {
      "installerIcon": "resources/novaico.ico",
      "uninstallerIcon": "resources/novaico.ico",
      "installerHeaderIcon": "resources/novaico.ico"
    },
    "mac": {
      "icon": "resources/novaico.ico"
    },
    "linux": {
      "icon": "resources/novaico.ico"
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "obfuscate": "javascript-obfuscator src --output app --compact true --control-flow-flattening true --string-array true --string-array-encoding base64",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run obfuscate && electron-builder --win --dir && node rename-folder.js",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@emotion/react": "^11.14.0",
    "@table-library/react-table-library": "^4.1.12",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.66.0",
    "axios": "^1.7.9",
    "dayjs": "^1.11.13",
    "electron-updater": "^6.1.7",
    "html2canvas": "^1.4.1",
    "js-cookie": "^3.0.5",
    "jspdf": "^2.5.2",
    "pdfjs-dist": "^5.2.133",
    "qrcode": "^1.5.4",
    "react-hook-form": "^7.59.0",
    "react-icons": "^5.5.0",
    "react-number-format": "^5.4.4",
    "react-router-dom": "^7.6.3",
    "react-spinners": "^0.15.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "sweetalert2": "^11.15.10",
    "tailwindcss": "^4.1.11",
    "vite-plugin-html": "^3.2.2",
    "winreg": "^1.2.5",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/winreg": "^1.2.36",
    "@vitejs/plugin-react": "^4.3.1",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.7",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "javascript-obfuscator": "^4.1.1",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  }
}
